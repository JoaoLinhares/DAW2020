extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal
        h3.w3-center Student: #{s.nome}
    .w3-container 
        table.w3-table-all
            tr 
              th.w3-center Number
              th.w3-center Name
              th.w3-center Git
              th.w3-center TPC1
              th.w3-center TPC2
              th.w3-center TPC3
              th.w3-center TPC4
              th.w3-center TPC5
              th.w3-center TPC6
              th.w3-center TPC7
              th.w3-center TPC8
              th.w3-center Total Done
            tr
              td.w3-center= s.numero
              td.w3-center= s.nome
              td.w3-center
                a(href=s.git) #{s.git}
              - var total = 0
              - var size = s.tpc.length
              - var n = 0
              while n < size
                if s.tpc[n++] == 1
                    td.w3-center(style="color:green") Done
                    -- total++
                else
                    td.w3-center(style="color:red") Not Done
              while n < 8
                td.w3-center(style="color:red") Not Done
                - n++
              td.w3-center #{total}
    .w3-row.w3-center(style="margin-left:40%; margin-right:40%; margin-top:1%; margin-bottom:1%;")
        div.w3-third.w3-container(style="text-align:center;")
            - var ref = "window.location.href='/alunos/editar/" + s.numero + "'"
            button(onclick=ref style="text-align:center;") Edit
        div.w3-third.w3-container(style="text-align:center;")
            button(onclick="window.location.href='/alunos'" style="text-align:center;") Go Back
        - var path = "/alunos/" + s.numero + "?_method=DELETE"
        form.w3-third.w3-container(action=path method="POST")
            button(type="submit" value="Submit") Delete
    footer.w3-container.w3-teal
