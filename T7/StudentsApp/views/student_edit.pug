extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal
        h3.w3-center Edit Student Number: #{s.numero}
    - var path = "/alunos/" + s.numero + "?_method=PUT"
    - var nome = s.nome
    - var git = s.git
    form.w3-container(action=path method="POST" style="text-align: center; margin-left:10%; margin-right:10%; margin-top:1%;")
        hr
        label.w3-text-teal
            b Name:
        input.w3-input.w3-border.w3-light-grey(type="text" name="nome" value=nome required)
        hr
        label.w3-text-teal
            b Git:
        input.w3-input.w3-border.w3-light-grey(type="text" name="git" value=git required)
        hr
        table.w3-table-all
            tr  
                th 
                th TPC1
                th TPC2
                th TPC3
                th TPC4
                th TPC5
                th TPC6
                th TPC7
                th TPC8
            tr
                th Done
                - var n = 0
                - var value = 1
                while n < 8
                    - var variable = "tpc" + value++
                    td
                        if s.tpc[n++] == 1
                            input.w3-center(type="checkbox" name=variable value="true" checked)
                        else 
                            input.w3-center(type="checkbox" name=variable value="true")
        hr
        input.w3-btn.w3-blue-grey(type="submit" value="Edit")
        input.w3-btn.w3-blue-grey(type="reset" value="Clean")
    div(style="text-align:center; margin:1%")
        button.w3-btn.w3-blue-grey(onclick="window.location.href='/alunos'" style="text-align:center;") Cancel
    footer.w3-container.w3-teal
